
<div class="container">
  <% users = [] %>
  <% @pin.visits.each do |visit| %>
  <%  users << visit.user  %>
  <% end %>
  <% if users.include? current_user %>
  <%= "You already have visited this place" %>
  <% else %>
  <%= simple_form_for [@pin, @visit] do |f| %>
  <%= f.button :submit, 'Mark as visited', class: 'btn btn-outline-primary btn-sm' %>
  <% end %>
  <% end %>
  <h1> <%= @pin.title %> </h1>
  <% sum = 0 %>
  <% @pin.votes.each do |vote|  %>
  <% sum += vote.note %>
  <% end %>
  <% if sum == 0 %>
  <ul class="ratings">
    <li class="star star-white"></li>
    <li class="star star-white"></li>
    <li class="star star-white"></li>
    <li class="star star-white"></li>
    <li class="star star-white"></li>
  </ul>
  <% else %>
  <% average = sum / @pin.votes.count %>
  <% end %>


  <div class="center">
    <% case average %>
    <% when 0 %>
    <ul class="ratings">
      <li class="star star-white"></li>
      <li class="star star-white"></li>
      <li class="star star-white"></li>
      <li class="star star-white"></li>
      <li class="star star-white"></li>
    </ul>
    <% when 1 %>
    <ul class="ratings">
      <li class="star star-white"></li>
      <li class="star star-white"></li>
      <li class="star star-white"></li>
      <li class="star star-white"></li>
      <li class="star star-yellow"></li>
    </ul>
    <% when 2 %>
    <ul class="ratings">
      <li class="star star-white"></li>
      <li class="star star-white"></li>
      <li class="star star-white"></li>
      <li class="star star-yellow"></li>
      <li class="star star-yellow"></li>
    </ul>
    <% when 3 %>
    <ul class="ratings">
      <li class="star star-white"></li>
      <li class="star star-white"></li>
      <li class="star star-yellow"></li>
      <li class="star star-yellow"></li>
      <li class="star star-yellow"></li>
    </ul>
    <% when 4 %>
    <ul class="ratings">
      <li class="star star-white"></li>
      <li class="star star-yellow"></li>
      <li class="star star-yellow"></li>
      <li class="star star-yellow"></li>
      <li class="star star-yellow"></li>
    </ul>
    <% when 5 %>
    <ul class="ratings">
      <li class="star star-yellow"></li>
      <li class="star star-yellow"></li>
      <li class="star star-yellow"></li>
      <li class="star star-yellow"></li>
      <li class="star star-yellow"></li>
    </ul>
    <% end %>
  </div>





  <% if @pin.photo.attached? %>
  <div><%= cl_image_tag @pin.photo.key, height: 300, width: 400, crop: :fill %></div>
  <% else %>
  <div></div>
  <% end %>
  <% users = [] %>
  <% @pin.votes.each do |vote|%>
  <% users << vote.user %>
  <% end %>
  <% if !users.include? current_user %>
  <%= simple_form_for [@pin, @vote], wrapper: :inline_form, html: { class: 'form-inline' } do |f| %>
  <%= f.input :note, collection: 0..5 %>
  <%= f.button :submit, class: 'btn btn-primary btn-sm mx-2' %>
  <% end %>




  <%= @pin.description %>


  <p>
    <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
      <h3>See <%= @pin.comments.count %> comments </h3>
    </a>
    <div class="collapse" id="collapseExample">
      <% @pin.comments.each do |comment| %>

      <h5><%= comment.user.username %></h5>
      <p><%= comment.content %></p>

      <% end %>
    </div>
    <h3>Add a comment</h3>
    <%= simple_form_for [@pin, @comment] do |f| %>
    <%= f.input :content %>
    <%= f.button :submit, class: 'btn btn-primary btn-block mx-0' %>
    <% end %>
    <% end %>

